            android:textColor="#E0E0E0"
            style="@style/Keypad.Digit"/>
        <TextView
            android:id="@+id/digit_2_text"
            android:text="@string/digit_2_text"
            android:textColor="#E0E0E0"
            style="@style/Keypad.Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/digit_3"
        android:tag="@string/digit_3"
        style="@style/Keypad.Button">

