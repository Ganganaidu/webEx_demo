<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="0dp"
    android:id="@+id/keypadlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:background="#AA000000"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/digit_1"
        android:tag="@string/digit_1"
        style="@style/Keypad.Button">

        <TextView
            android:duplicateParentState="true"
            android:id="@+id/digit_1_digit"
            android:text="@string/digit_1"
            android:textColor="#E0E0E0"
            style="@style/Keypad.Digit"/>
        <TextView
            android:id="@+id/digit_1_text"
            android:text="@string/digit_1_text"
            android:textColor="#E0E0E0"
            style="@style/Keypad.Text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/digit_2"
        android:tag="@string/digit_2"
        style="@style/Keypad.Button">

        <TextView
            android:id="@+id/digit_2_digit"
